<table class="table">
    <thead>
        <tr>
            <th>-- ID -</th>
            <th>- Nombre -</th>
            <th>- Estado -</th>
            <th>- Maximo de particpantes -</th>
            <th>--</th>
            <th>- Inscrito ? --</th>
        </tr>
    </thead>
    <tbody id="datos">
             <% ltorneos.forEach( function(elem) { %>
                <tr>
                    <td><%=elem.id%></td>
                    <td><%=elem.nombre%></td>
                    <td><%=elem.estado%></td>
                    <td><%=elem.maxParticipantes%></td>
                    <td><form action="ver-torneo" method ="get">
                        <input type="hidden" name="id" value="<%= elem.id %>" />
                        <input type="submit" value="Ver">
                    </form></td>
                <td>
                    <% var inscrito= false 
                    linscrito.forEach(function(c){
                        if(elem.id == c.IdTorneo){ 
                            inscrito= true
                        }})%>
                    <%if (inscrito){%>
                        Inscrito
                        <%} else{%>
                            <form action="inscripcion" method ="GET">
                            <input type="hidden" name="id" value="<%= elem.id %>" />
                            <input type="submit" value="Inscribirnos" />
                            </form>
                        <%}%>
                
                    
                </td>
                </tr>
                <%}) %>
     </tbody>
</table>



