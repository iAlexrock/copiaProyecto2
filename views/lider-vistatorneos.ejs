<table class="table">
    <thead>
        <tr>
            <th>-- ID -</th>
            <th>- Nombre -</th>
            <th>- Descripci√≥n--</th>
            <th>- Num Equipos registrados --</th>
            <th>- Maximo de particpantes -</th>
            <th>- Estado -</th>
            <th>- Inscrito ? --</th>
            
        </tr>
    </thead>
    <tbody id="datos">
             <% ltorneos.forEach( function(elem) { %>
                <tr>
                    <td><%=elem.id%></td>
                    <td><%=elem.nombre%></td>
                    <td><%=elem.descripcion%></td>
                    <td><%=elem.numParticipantes%></td>
                    <td><%=elem.maxParticipantes%></td>
                    <td><%=elem.estado%></td>
                    <td>
                        <% var inscrito= false 
                        linscrito.forEach(function(c){
                            if(elem.id == c.IdTorneo){ 
                                inscrito= true
                            }})%>
                        <%if (inscrito ){%> 
                            SI
                        <%} else{%>
                            NO
                            <%}%>
                    </td>
                    
                <td>
                    <% var inscrito= false 
                    linscrito.forEach(function(c){
                        if(elem.id == c.IdTorneo){ 
                            inscrito= true
                        }})%>
                    <%if (inscrito && elem.estado!="cerrado"){%>
                            <form action="ver-torneo" method ="get">
                            <input type="hidden" name="id" value="<%= elem.id %>" />
                            <input type="submit" value="Ver">
                            
                           
                            </form>
                            
                        <%} 
                        
                        else if(elem.estado!="abierto" || elem.maxParticipantes== elem.numParticipantes){%>
                            ----
                        <%}
                        
                        else{%>
                            <form action="inscripcion" method ="GET">
                            <input type="submit"onclick="return conf()" value="Inscribirnos"/>
                            <input type="hidden" name="id" value="<%= elem.id %>" />
                                   
                            </form>
                        <%}%>
                
                    
                </td>
                </tr>
                <%}) %>
     </tbody>
</table>
